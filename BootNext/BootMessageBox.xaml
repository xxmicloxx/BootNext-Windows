<Window x:Class="BootNext.BootMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:BootNext"
        mc:Ignorable="d"
        Title="BootNext" Width="400" Height="256.569" SizeToContent="Height" ResizeMode="NoResize"
        DataContext="{Binding RelativeSource={RelativeSource Self}}" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Margin="30,15,0,0" TextWrapping="Wrap" Text="{Binding MessageText}" VerticalAlignment="Top" FontSize="16" FontWeight="Medium" HorizontalAlignment="Left"/>
        <TextBlock Margin="30,50,30,55" TextWrapping="Wrap"><Run Text="{Binding InformationalText}"/></TextBlock>
        <Button Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Margin="0,0,20,15" Height="25" Click="ButtonBase_OnClick"/>
    </Grid>
</Window>
